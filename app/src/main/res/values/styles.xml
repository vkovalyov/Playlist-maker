<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="MainActivity">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="AppBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="navigationIconTint">@color/black</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
    </style>


    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconSize">@dimen/medium</item>
        <item name="iconTint">@color/text_color</item>
        <item name="fontWeight">500</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Switch">
        <item name="trackTint">@color/light_grey</item>
        <item name="thumbTint">@color/grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="IconColor">
        <item name="android:tint">@color/grey</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SettingActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Search">
        <item name="android:background">@color/light_grey</item>
        <item name="startIconTint">@color/grey</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="startIconDrawable">@drawable/search_icon</item>
        <item name="endIconDrawable">@drawable/close</item>
        <item name="endIconTint">@color/grey</item>
        <item name="fontWeight">400</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/black</item>
        <item name="font">@font/ys_display_medium</item>
    </style>


    <style name="SettingMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/regular</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>


    <style name="TrackName">
        <item name="android:textColor">@color/black_track</item>
        <item name="android:textSize">@dimen/regular</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ArtistName">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/regular_ys</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ErrorTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_ys</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>


    <style name="RefreshButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/regular_sys</item>
        <item name="cornerRadius">54dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textAllCaps">false</item>
    </style>



    <style name="TrackNameStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TrackGroupStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/regular_sys</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TrackDescriptionStyle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/regular_display</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TrackDescriptionInputStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/regular_display</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="PlayButton">
        <item name="android:src">@drawable/play</item>
    </style>

    <style name="PauseButton">
        <item name="android:src">@drawable/pause</item>
    </style>

    <style name="CustomTabText">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MediaActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
    </style>

    <style name="BottomNavigationNoRipple" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textSize">@dimen/regular_s</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="itemBackground">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <item name="itemTextColor">@color/bottom_nav_text_color</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
    </style>

    <style name="Button.Create" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center</item>
        <item name="strokeWidth">0dp</item>



        android:textColor="@color/white"
        app:backgroundTint="@color/grey"
        app:cornerRadius="8dp"
    </style>

    <style name="Widget.App.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        app:backgroundTint="@color/grey"
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="elevation">0dp</item> <!-- Убираем тень, если не нужна -->
    </style>

    <style name="PlayListTitle">
        <item name="android:textColor">@color/black_track</item>
        <item name="android:textSize">@dimen/regular_s</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="BottomSheetTitle">
        <item name="android:textColor">@color/black_track</item>
        <item name="android:textSize">@dimen/medium_ys</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="BottomSheetPlayListTitle">
        <item name="android:textColor">@color/black_track</item>
        <item name="android:textSize">@dimen/regular</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="BottomSheetPlayListCount">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/regular_ys</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="BottomSheet">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Toast">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/regular_sys</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="CreatePlayListEdit" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="font">@font/ys_display_regular</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="RoundedImagePlayList" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">2dp</item>
    </style>


    <style name="snackbar_style" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">7dp</item>
        <item name="backgroundTint">@color/black</item>
    </style>


    <style name="snackbar_text" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="font">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/regular_sys</item>
    </style>
</resources>